<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:id="@+id/widgetLayout"
    android:orientation="vertical"
    android:gravity="center"
    android:theme="@style/ThemeOverlay.WidgetPertemuan12.AppWidgetContainer"
    >

    <TextView
        android:id="@+id/appwidget_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?attr/appWidgetBackgroundColor"
        android:gravity="center"
        android:padding="10dp"
        android:text="0"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <Button
            android:id="@+id/appwidget_btn_plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginRight="6dp"/>
        <Button
            android:id="@+id/appwidget_btn_min"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="-"/>
    </LinearLayout>
</LinearLayout>